#: ../storage-focus-operational-considerations.rst:170
msgid "Zone per collection of nodes"
msgstr ""

#: ../storage-focus-operational-considerations.rst:172
msgid "Multiple racks"
msgstr ""

#: ../storage-focus-operational-considerations.rst:174
msgid "Multiple DCs"
