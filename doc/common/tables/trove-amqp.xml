  <table rules="all" xml:id="config_table_trove_amqp">
    <caption>Description of AMQP configuration options</caption>
    <col width="50%"/>
    <col width="50%"/>
    <thead>
      <tr>
        <th>Configuration option = Default value</th>
        <th>Description</th>
      </tr>
