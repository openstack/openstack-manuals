        <col width="30%"/>
        <col width="20%"/>
        <col width="25%"/>
        <col width="25%"/>

    <thead>
      <tr>
        <th>Flavor</th>
        <th>VCPUs</th>
        <th>Disk (in GB)</th>
        <th>RAM (in MB)</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <para>m1.tiny</para>
        </td>
